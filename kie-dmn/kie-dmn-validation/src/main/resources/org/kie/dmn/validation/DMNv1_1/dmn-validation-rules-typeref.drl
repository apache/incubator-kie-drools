rule TYPEREF_NO_FEEL_TYPE_p1
when
  $o: Expression( !(this instanceof UnaryTests), typeRef!.prefix != null, getNamespaceURI( typeRef.prefix ) == getURIFEEL(), BuiltInType.determineTypeFromName( typeRef.localPart ) == BuiltInType.UNKNOWN )
then
  reporter.report( DMNMessage.Severity.ERROR,  $o , Msg.UNKNOWN_FEEL_TYPE_REF_ON_NODE, $o.getTypeRef(), $o.getParentDRDElement().getIdentifierString() );
end

