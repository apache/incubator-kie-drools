package org.drools.integrationtest

import java.util.List

global List list

template Cheese
    String  name
    Integer price
end

rule "Match Stilton"
	when
	    $stilton : Cheese( name == "stilton" )
    then
    	$stilton.setFieldValue( "price", new Integer( 200 ) );
    	list.add( $stilton );
end    