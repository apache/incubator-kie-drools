query isInFunction( Apply $a )
    DefineFunction( apply == $a )
    or
    (
        $b : Apply( constantsAndFieldRevesAndNormContinuouses contains $a )
        and
        isInFunction( $b ; )
    )
end

query isLocalToFunction( Apply $a, boolean $ans )
    ( isInFunction( $a ; )
      and
      $ans := Boolean() from Boolean.TRUE
    )
    or
    ( not isInFunction( $a ; )
      and
      $ans := Boolean() from Boolean.FALSE
    )
end



rule "Nested Applys"
salience -5
when
    $a  : Apply( $expr : constantsAndFieldRevesAndNormContinuouses, $f : this.function )
    $a2 : Apply( this memberOf $expr, $f2 : this.function, $arity : constantsAndFieldRevesAndNormContinuouses.size() )
    accumulate (
            $res : FunctionResult( father == $a2 ),
            $subs : collectList( $res );
            $subs.size() == $arity
    )
    $funx : List( size() == $arity, ! this.contains( "x" ) ) from accumulate (
        $res : FunctionResult( father == $a2, $x : expr, $fs : fields, $index : index ),
        init( ArrayList funs = new ArrayList( $arity ); for ( int j = 0; j < $arity; j++ ) { funs.add( "x" ); } ),
        action( funs.set( $index, $res ); ),
        result( funs )
    )
    $args : List( size() == $arity, ! this.contains( "x" ) ) from accumulate (
        $res : FunctionResult( father == $a2, $x : expr, $fs : fields, $index : index ),
        init( ArrayList args = new ArrayList( $arity ); for ( int j = 0; j < $arity; j++ ) { args.add( "x" ); } ),
        action( args.set( $index, $x ); ),
        result( args )
    )
    $deps : List() from accumulate (
        $res : FunctionResult( father == $a2, $x : expr, $fs : fields, $anc : parents != null, simple == false ) from $funx,
        init( List deps = new ArrayList() ),
        action( deps.addAll( $anc ); ),
        result( deps )
    )
    $bag : Set() from accumulate (
        $res : FunctionResult( father == $a2, $x : expr, $fs : fields != null ) from $funx,
        init( Set bag = new LinkedHashSet() ),
        action( bag.addAll( $fs ); ),
        result( bag )
    )
then

    String expr = utils.mapFunction( $f2, $args );
    String bit = expr;
    if ( ! utils.isBuiltIn( $f2 ) ) {
        bit = "$" + $f2 + "_return";
        $deps.add(  utils.mapFunctionAsQuery( $f2, $args ) );
    }


    insertLogical( new FunctionResult( bit, $a, $bag, false, $deps, $expr.indexOf( $a2  ) ) );

end



