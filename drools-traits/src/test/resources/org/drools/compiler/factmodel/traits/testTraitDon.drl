package org.drools.compiler.trait.test;

import org.drools.core.factmodel.traits.*;
import org.drools.traits.core.factmodel.*;

global java.util.List list;


 
declare trait Parent
    child   : Student
end
 
 
declare trait Person
    name    : String 
    age     : int   @position(0) 
end
  
declare trait Role

end
 

declare trait Student extends Person, Role
    school  : String
end 
 
 
declare Imp
    @Traitable
    name    : String    @key
    school  : String
end
 
 
  
declare java.lang.Object 
    @Traitable
end 
 
 
declare java.lang.String 
    @Traitable
end 
 
 
 
rule "Init"
when 
then 
    Imp core = new Imp( "xx", "yy" );
    insert( core );
end

