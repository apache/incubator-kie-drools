package org.drools.compiler.test;

import org.drools.mvel.compiler.Person;
import java.util.List

global Person a;
global List l;

rule "r"
    no-loop true
    when
        not Person()
    then
           l.add(new Person("0"));
           if (l.size() > 2)
        {
           kcontext.getKieRuntime().halt();
        }
           insertLogical( a );
end
