package org.drools.mvel.compiler

rule "Test OR with multiple evals - java"
    dialect "java"
when
    $aFact : FactA( $a : field1 == "a" )
    $bFact : FactB( $b : f1 == "b" )
    $cFact : FactC( $c : f1 == "c" )
    ( eval($aFact != null) or eval($bFact != null) )
    ( eval($bFact != null) or eval($cFact != null) )
then
    // do something thrice
end

rule "Test OR with multiple evals - mvel"
    dialect "mvel"
when
    $aFact : FactA( $a : field1 == "a" )
    $bFact : FactB( $b : f1 == "b" )
    $cFact : FactC( $c : f1 == "c" )
    ( eval($aFact != null) or eval($bFact != null) )
    ( eval($bFact != null) or eval($cFact != null) )
then
    // do something thrice
end
