<?xml version='1.0'?>
<!--

  Bakalarska prace: Zvyraznovani syntaxe v XSLT
  Michal Molhanec 2005

  ini-hl.xml - konfigurace zvyraznovace INI souboru

-->
<highlighters>

<wholehighlighter type='regex'>
  <pattern>(?m)(;.*)$</pattern>
  <style>comment</style>
</wholehighlighter>

<wholehighlighter type='regex'>
  <pattern>(?m)^(\[.+\]\s*)$</pattern>
  <style>section</style>
</wholehighlighter>

<wholehighlighter type='regex'>
  <pattern>(?m)^(.+=)</pattern>
  <style>keyword</style>
</wholehighlighter>

</highlighters>