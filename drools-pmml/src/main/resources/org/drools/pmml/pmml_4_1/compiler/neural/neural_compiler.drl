    NeuralNetwork( $info : extensionsAndNeuralLayersAndNeuralInputs, $act : activationFunction )
    $nl : NeuralLayer( this memberOf $info, activationFunction == null )
then
    modify ( $nl ) {
        setActivationFunction( $act );
    }
end

