    </dependency>
    <dependency> <!-- codegenstringutils -->
      <groupId>org.kie</groupId>
      <artifactId>kie-dmn-feel</artifactId>
    </dependency>
    <dependency> <!-- used by DMN for general (runtime-agnostic) inspection of PMML model -->
      <groupId>org.jpmml</groupId>
