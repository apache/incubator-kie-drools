    <parent>
        <groupId>org.kie</groupId>
        <artifactId>drools-build-parent</artifactId>
        <version>quarkus-3-SNAPSHOT</version>
        <relativePath>../build-parent/pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.drools</groupId>
    <artifactId>drools-reliability</artifactId>

    <name>Drools :: Reliability</name>

    <properties>
        <java.module.name>org.drools.reliability</java.module.name>
        <version.infinispan>14.0.6.Final</version.infinispan>
