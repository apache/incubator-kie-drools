        <artifactId>efesto-quarkus-deployment</artifactId>
        <version>${project.version}</version>
        <classifier>sources</classifier>
      </dependency>
      <dependency>
        <groupId>org.kie</groupId>
        <artifactId>efesto-quarkus-deployment</artifactId>
