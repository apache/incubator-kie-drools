package org.drools.games.invaders6;

import org.drools.games.KeyPressed
import org.drools.games.Run
import org.drools.games.GameUI
import org.drools.games.invaders.FPSTimer

global GameUI ui

global FPSTimer fpsTimer;

dialect "mvel"

rule "init" when
then
    insert( new Run() );
    setFocus( "Init" );
end

rule GameLoop when
    r : Run()
then
    setFocus( "Draw" );
    setFocus( "Bullet" );
    setFocus( "Move" );
    setFocus( "Keys" );
end


rule Draw when
    r : Run()
then
    modify( r ) {} // force loop
    fpsTimer.incFrame();
end