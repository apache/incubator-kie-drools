package org.drools.example.cdi.cdiexample

import org.drools.example.cdi.cdiexample.Message

global java.io.PrintStream out

rule "rule 1" when
    m : Message( )
then
    out.println( m.getName() + ": " +  m.getText() );
end

rule "rule 2" when
    Message( text == "Hello, HAL. Do you read me, HAL?" )
then
    insert( new Message("HAL", "Dave. I read you." ) );
end