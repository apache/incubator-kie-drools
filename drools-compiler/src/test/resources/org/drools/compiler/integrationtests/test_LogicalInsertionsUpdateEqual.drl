package org.drools.test;

import org.drools.compiler.Person
import org.drools.compiler.CheeseEqual;

rule "assert"
    when
        p : Person()
    then
        insertLogical( new CheeseEqual( p.getName(), p.getAge() ) );
end

rule "modify"
    no-loop true
    when
        c : CheeseEqual(price == 2)
    then
        c.setPrice(c.getPrice() + 1);
        update(c);
end
