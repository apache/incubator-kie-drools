package org.test;

import org.drools.factmodel.traits.Entity;


global java.util.List list;


 
declare Parent
    @format( trait )
    child   : Student
end
 
 
declare Person
    @format(trait)
    name    : String 
    age     : int   @position(0) 
end
  
declare Role
    @format(trait) 
end
 

declare Student extends Person, Role
    @format(trait)
    school  : String
end 
 
 
declare Imp
    @Traitable 
    name    : String    @key
    school  : String
end
 
 
  
declare java.lang.Object 
    @Traitable
end 
 
 
declare java.lang.String 
    @Traitable
end 
 
 
 
