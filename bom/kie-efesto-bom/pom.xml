      </dependency>
      <dependency>
        <groupId>org.kie</groupId>
        <artifactId>efesto-identifiers-api-application</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.kie</groupId>
        <artifactId>efesto-identifiers-api-decisions</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
