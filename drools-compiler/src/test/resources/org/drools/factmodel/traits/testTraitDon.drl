rule "Trait"
dialect "java"
when
    $core: Imp( "xx", "yy" ; )
    not String( this == "die" )
then
    Student s = don( $core, Student.class, true );
    Imp core = (Imp) s.getCore();

    s.setAge( 88 );
    s.setSchool( "skl" );

    update( s );
end
 
rule "Check" 
no-loop 
when
    $z: Student( $s : school == "skl", fields[ "name" ] == "xx", $a : age == 88 )
then
    list.add( "DON" );
end 
 
 
 
rule "Check2"
salience -100 
