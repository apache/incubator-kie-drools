<PMML version="4.2" xsi:schemaLocation="http://www.dmg.org/PMML-4_2 http://www.dmg.org/v4-2-1/pmml-4-2.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.dmg.org/PMML-4_2">
  <Header copyright="JBoss" description="Mock Cold Risk Prediction Model">
	  <Extension name="modelPackage" value="test"/>
	</Header>
  <DataDictionary numberOfFields="2">
    <DataField dataType="double" displayName="Outside Temperature" name="temp" optype="continuous">
      <Interval closure="closedClosed" leftMargin="0.0" rightMargin="40.0"/>
    </DataField>
    <DataField dataType="double" displayName="Cold Risk Factor" name="coldRisk" optype="continuous"/>
  </DataDictionary>
  <NeuralNetwork activationFunction="identity" algorithmName="neuralNetwork" functionName="regression" modelName="MockCold">
    <Extension>
      <Surveyable/>
    </Extension>
    <MiningSchema>
	    <Extension name="adapter" value="TRAIT">MyAdapter</Extension>
      <MiningField name="temp" usageType="active" />
      <MiningField name="coldRisk" usageType="predicted" />
    </MiningSchema>
    <Output>
	    <Extension name="adapter" value="TRAIT">MyOutAdapter</Extension>
      <OutputField name="Cold" targetField="coldRisk"/>
    </Output>
    <NeuralInputs>
      <NeuralInput id="0">
        <DerivedField dataType="double" optype="continuous">
          <FieldRef field="temp"/>
        </DerivedField>
      </NeuralInput>
    </NeuralInputs>
    <NeuralLayer>
      <Neuron bias="1.0" id="1">
        <Con from="0" weight="-0.02"/>
      </Neuron>
    </NeuralLayer>
    <NeuralLayer>
      <Neuron bias="0.0" id="2">
        <Con from="1" weight="1.0"/>
      </Neuron>
    </NeuralLayer>
    <NeuralOutputs>
      <NeuralOutput outputNeuron="2">
        <DerivedField dataType="double" optype="continuous">
          <FieldRef field="coldRisk"/>
        </DerivedField>
      </NeuralOutput>
    </NeuralOutputs>
  </NeuralNetwork>
</PMML>