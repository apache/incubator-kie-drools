<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kie</groupId>
    <artifactId>kie-maven-plugin-test-kjar-parent</artifactId>
    <version>@org.kie.version@</version>
    <relativePath>../kie-maven-plugin-test-kjar-setup/kie-maven-plugin-test-kjar-parent/pom.xml</relativePath>
  </parent>

  <artifactId>kie-maven-plugin-test-kjar-15-javaversion</artifactId>

  <packaging>kjar</packaging>

  <properties><!-- these properties are set to check for the mojo to pickup the intended java version -->
    <compiler-plugin.version>3.8.1</compiler-plugin.version>
    <maven.compiler.target>17</maven.compiler.target><!-- need override parent -->
    <maven.compiler.source>17</maven.compiler.source><!-- need override parent -->
    <maven.compiler.release>17</maven.compiler.release>
  </properties>
  
  <dependencies>
    <dependency>
      <groupId>org.kie</groupId>
      <artifactId>kie-api</artifactId>
      <version>${org.kie.version}</version>
    </dependency>
    <dependency>
      <groupId>org.drools</groupId>
      <artifactId>drools-engine</artifactId>
      <version>${org.kie.version}</version>
    </dependency>
    <dependency>
      <groupId>org.kie</groupId>
      <artifactId>kie-maven-plugin-test-kjar-common</artifactId>
      <version>@org.kie.version@</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>${compiler-plugin.version}</version>
      </plugin>
      <plugin>
        <groupId>org.kie</groupId>
        <artifactId>kie-maven-plugin</artifactId>
        <version>@org.kie.version@</version>
        <extensions>true</extensions>
        <configuration>
          <properties><!-- need to override from parent by avoid locking to language level for java dialect -->
            <drools.dialect.java.compiler.lnglevel>${maven.compiler.release}</drools.dialect.java.compiler.lnglevel>
          </properties>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
