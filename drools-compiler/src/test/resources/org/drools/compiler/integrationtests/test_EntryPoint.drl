package org.drools.compiler

import org.drools.compiler.StockTick;

global java.util.List results;

declare StockTick
    @role( event )
end

rule "Test entry point"
when
    $st : StockTick( company == "ACME", price > 10 ) from entry-point StockStream
then
    results.add( $st );
end
