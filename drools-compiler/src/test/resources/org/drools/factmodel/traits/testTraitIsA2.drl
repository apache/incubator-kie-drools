package org.test;

import org.drools.Person
import org.drools.factmodel.traits.Traitable;

declare Person
@Traitable
end

declare trait Student
    school : String
end

rule "create student" 
    when
        $student : Person( age < 26, this not isA Student )
    then
        Student s = don( $student, Student.class );
        s.setSchool("Masaryk University");
        update( $student );
end

